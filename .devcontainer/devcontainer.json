{
	"name": "workspace",
	"build": {		  
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"workspaceFolder": "/workspace",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/tmp/.ssh,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.codex,target=/home/vscode/.codex,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.openstack,target=/home/vscode/.openstack,type=bind,consistency=cached",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.bash_history,target=/home/vscode/.bash_history,type=bind,consistency=cached"
	],
	"onCreateCommand": [
		"bash",
		"-c",
		"rm -rf /home/vscode/.ssh && cp -r /tmp/.ssh /home/vscode && sudo chown vscode:vscode -R /home/vscode/.ssh && sudo chown vscode:root /var/run/docker.sock"
	]
}
